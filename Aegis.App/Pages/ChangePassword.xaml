<Window x:Class="Aegis.App.Pages.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password"
        Width="480"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid Margin="20">

        <Border CornerRadius="12"
                BorderBrush="#444"
                BorderThickness="2"
                Padding="20"
                Background="#252525">

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Change Password"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Current Password -->
                <TextBlock Text="Current Password"
                           Foreground="#CCC"
                           Margin="0,0,0,4"/>
                <PasswordBox x:Name="CurrentPasswordBox"
                             Height="32"
                             Margin="0,0,0,12"
                             Background="#2A2A2A"
                             Foreground="White"/>

                <!-- New Password -->
                <TextBlock Text="New Password"
                           Foreground="#CCC"
                           Margin="0,0,0,4"/>
                <PasswordBox x:Name="NewPasswordBox"
                             Height="32"
                             Margin="0,0,0,8"
                             Background="#2A2A2A"
                             Foreground="White"
                             PasswordChanged="PasswordChanged"/>

                <!-- Confirm -->
                <TextBlock Text="Confirm Password"
                           Foreground="#CCC"
                           Margin="0,0,0,4"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Height="32"
                             Margin="0,0,0,12"
                             Background="#2A2A2A"
                             Foreground="White"
                             PasswordChanged="PasswordChanged"/>

                <!-- Entropy -->
                <TextBlock x:Name="EntropyText"
                           Text="Entropy: 0 bits"
                           Foreground="#999"
                           FontSize="13"
                           Margin="0,0,0,6"/>

                <ProgressBar x:Name="EntropyProgress"
                             Height="10"
                             Minimum="0"
                             Maximum="128"
                             Value="0"
                             Background="#333"
                             Foreground="#4CAF50"
                             Margin="0,0,0,16"/>

                <!-- Rules -->
                <TextBlock Text="• 12–64 characters&#x0A;• Upper + lower + digit + symbol&#x0A;• No spaces"
                           Foreground="#888"
                           FontSize="12"
                           Margin="0,0,0,20"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <Button Content="Cancel"
                            Width="120"
                            Height="36"
                            Margin="0,0,12,0"
                            Style="{StaticResource AegisButton}"
                            Click="Cancel_Click"/>

                    <Button x:Name="ChangeButton"
                            Content="Change Password"
                            Width="160"
                            Height="36"
                            Style="{StaticResource AegisButton}"
                            IsEnabled="False"
                            Click="Change_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>

