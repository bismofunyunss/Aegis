<Page x:Class="Aegis.App.Pages.HashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Aegis.App.Controls"
      Width="900"
      Height="500"
      Background="{x:Null}">

    <Grid>
        <!-- Main centered panel -->
        <Border Width="860"
                Height="Auto"
                Padding="24"
                CornerRadius="12"
                BorderBrush="#444"
                BorderThickness="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="14" ShadowDepth="4" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- ComboBox -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                    <RowDefinition Height="*"/>
                    <!-- Hash Output -->
                    <RowDefinition Height="Auto"/>
                    <!-- Bottom Welcome + TPM -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                           Text="File Hasher"
                           Foreground="White"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Hash Algorithm Selection (on top) -->
                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Select Hash Algorithm:"
                               Foreground="White"
                               Margin="0,0,0,8"
                               HorizontalAlignment="Center"/>
                    <ComboBox x:Name="HashAlgorithmComboBox"
                              Width="250"
                              Height="36">
                        <ComboBoxItem Content="MD5"/>
                        <ComboBoxItem Content="SHA-1"/>
                        <ComboBoxItem Content="SHA-256"/>
                        <ComboBoxItem Content="SHA-384"/>
                        <ComboBoxItem Content="SHA-512"/>
                        <ComboBoxItem Content="SHA3-256"/>
                        <ComboBoxItem Content="SHA3-384"/>
                        <ComboBoxItem Content="SHA3-512"/>
                    </ComboBox>
                </StackPanel>

                <!-- Open File + Compute Hash Buttons stacked -->
                <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button x:Name="OpenFileButton"
                            Content="Open File"
                            Style="{StaticResource AegisButton}"
                            Width="386"
                            Height="50"
                            Margin="0,0,0,12"
                            Click="OpenFileButton_Click"/>
                    <Button x:Name="ComputeHashButton"
                            Content="Compute Hash"
                            Style="{StaticResource AegisButton}"
                            Width="386"
                            Height="50"
                            Click="ComputeHashButton_Click"/>
                </StackPanel>

                <!-- Hash Output TextBox -->
                <TextBox Grid.Row="3"
                         x:Name="HashOutputTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Background="#2A2A2A"
                         Foreground="DodgerBlue"
                         FontFamily="Consolas"
                         FontSize="14"
                         Padding="8"
                         Margin="0,0,0,20"/>

                <!-- Bottom Welcome + TPM -->
                <Grid Grid.Row="4" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>



