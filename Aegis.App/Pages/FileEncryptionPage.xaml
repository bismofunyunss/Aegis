<Page x:Class="Aegis.App.Pages.FileEncryptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Aegis.App.Controls"
      Width="750" Height="500">

    <Grid>
        <!-- Main centered panel -->
        <Border Width="710"
                Height="500"
                CornerRadius="12"
                BorderBrush="#444"
                BorderThickness="2"
                Background="#1E1E1E"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.4"/>
            </Border.Effect>

            <!-- Panel grid -->
            <Grid Margin="20,12,20,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Progress -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                    <RowDefinition Height="*"/>
                    <!-- Image -->
                    <RowDefinition Height="Auto"/>
                    <!-- FileStatusLbl -->
                    <RowDefinition Height="60"/>
                    <!-- Bottom welcome + TPM -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                           Text="File Encryptor"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>

                <!-- Progress label + ProgressBar -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,16">
                    <TextBlock Text="Progress :: " Foreground="#CCC" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ProgressBar x:Name="ProgressBar" Width="400" Height="18" Background="#333" Foreground="DodgerBlue" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Buttons -->
                <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left buttons -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0,0,10,0">
                        <Button x:Name="OpenFileButton" Content="Open File" Style="{StaticResource AegisButton}" Height="58" HorizontalAlignment="Stretch" Margin="0,0,0,12" Click="OpenFileButton_Click"/>
                        <Button x:Name="EncryptFileButton" Content="Encrypt File" Style="{StaticResource AegisButton}" Height="60" HorizontalAlignment="Stretch" Click="EncryptFileButton_Click"/>
                    </StackPanel>

                    <!-- Right buttons -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10,0,0,0">
                        <Button x:Name="SaveFileButton" Content="Save File" Style="{StaticResource AegisButton}" Height="58" HorizontalAlignment="Stretch" Margin="0,0,0,12" Click="SaveFileButton_Click"/>
                        <Button x:Name="DecryptFileButton" Content="Decrypt File" Style="{StaticResource AegisButton}" Height="60" HorizontalAlignment="Stretch" Click="DecryptFileButton_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Image occupying largest space -->
                <Image Grid.Row="3" Grid.ColumnSpan="2"
                       x:Name="CenterImage"
                       Source="/Images/cryptography.png"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,12"
                       Width="139"/>

                <!-- File status label centered below image -->
                <TextBlock Grid.Row="4" Grid.ColumnSpan="2"
                           x:Name="FileStatusLbl"
                           Text="No file selected"
                           Foreground="#CCC"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>

                <!-- Bottom welcome + TPM fully inside panel -->
                <Grid Grid.Row="5" Grid.ColumnSpan="2" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>





































