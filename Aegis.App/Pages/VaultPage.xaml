<Page x:Class="Aegis.App.Pages.VaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Aegis.App.Pages"
      xmlns:vaultEntry="clr-namespace:Aegis.App.Vault.VaultEntry"
      xmlns:controls="clr-namespace:Aegis.App.Controls"
      Background="#1E1E1E">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,5"
                    Background="Transparent"
                    VerticalAlignment="Center">

            <!-- Add Entry Button -->
            <Button Width="28" Height="28" Background="Transparent" BorderThickness="0" ToolTip="Add New" Click="AddEntry_Click">
                <TextBlock Text="+" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <!-- Save Vault Button -->
            <Button x:Name="SaveButton"
                    Width="28" Height="28" Background="Transparent" BorderThickness="0" ToolTip="Save Vault" Click="SaveButton_Click">
                <TextBlock Text="💾" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>

        <!-- Vault DataGrid -->
        <DataGrid Grid.Row="1"
                  x:Name="DataGridVault"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  ItemsSource="{x:Static vaultEntry:VaultState.Items}"
                  Background="#1E1E1E"
                  RowBackground="#1A1A1A"
                  AlternatingRowBackground="#202020"
                  GridLinesVisibility="None"
                  Foreground="White"
                  BorderBrush="#333"
                  RowHeaderWidth="0"
            HeadersVisibility="Column">
            <!-- only show column headers -->

            <DataGrid.Resources>
                <!-- Column Headers -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="#222"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>

                <!-- Cells -->
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#3A3A3A"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2A2A2A"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- TextBox Editing Style -->
                <Style TargetType="TextBox" x:Key="EditingTextBoxStyle">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="BorderBrush" Value="#555"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="6"/>
                    <Setter Property="CaretBrush" Value="White"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#111111" BlurRadius="4" ShadowDepth="1"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>

            <!-- Columns -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Account" Binding="{Binding Account, Mode=TwoWay}" Width="2*" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username, Mode=TwoWay}" Width="2*" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email, Mode=TwoWay}" Width="2*" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password, Mode=TwoWay}" Width="2*" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes, Mode=TwoWay}" Width="3*" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>

                <!-- Delete Button -->
                <DataGridTemplateColumn Header="" Width="30">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Width="24" Height="24"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ToolTip="Delete Entry"
                                    Click="DeleteEntry_Click">
                                <TextBlock Text="🗑" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom overlay / TPM -->
        <Grid Grid.Row="2" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Page>





























