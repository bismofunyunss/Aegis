<Page x:Class="Aegis.App.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Aegis.App.Controls"
      Width="450"
      Height="450"
      Background="{x:Null}">

    <Grid>
        <!-- Centered container panel -->
        <Border Width="430"
                Padding="20"
                CornerRadius="12"
                BorderBrush="#444"
                BorderThickness="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
            </Border.Effect>

            <DockPanel LastChildFill="True">

                <!-- Bottom Welcome + TPM -->
                <Grid DockPanel.Dock="Bottom" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                </Grid>

                <!-- Main content stack -->
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0">
                    <!-- Title -->
                    <TextBlock Text="Login"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,22"/>
                    <!-- Username Label -->
                    <TextBlock Text="Username"
                               Foreground="White"
                               Margin="0,0,0,8"/>
                    <!-- Username TextBox -->
                    <TextBox x:Name="UsernameBox"
                             Style="{StaticResource AegisTextBox}"
                             Height="34"/>
                    <!-- Password Label -->
                    <TextBlock Text="Password"
                               Foreground="#888"
                               Margin="0,12,0,8"/>
                    <!-- PasswordBox -->
                    <PasswordBox x:Name="PasswordBox"
                                 IsEnabled="False"
                                 ToolTip="Must enable FIPS mode"
                                 Height="34"
                                 Background="#2A2A2A"
                                 Foreground="#AAA"
                                 BorderBrush="#444"
                                 BorderThickness="1"/>
                    <!-- Remember Me -->
                    <CheckBox x:Name="RememberMeCheckBox"
                              Content="Remember Me"
                              Foreground="White"
                              Margin="0,12,0,12"/>
                    <!-- Login + Logout Buttons -->
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <Button x:Name="LoginButton"
                                Content="Login"
                                Style="{StaticResource AegisButton}"
                                Width="386"
                                Height="50"
                                Margin="0,0,0,10"
                                Click="LoginButton_Click"/>
                        <Button x:Name="LogoutButton"
                                Content="Logout"
                                Style="{StaticResource AegisButton}"
                                Width="386"
                                Height="50"
                                Click="LogoutButton_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Decorative Image -->
                <Image Source="/Images/cyber-security.png"
                       Width="80"
                       Height="64"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Opacity="0.75"
                       Margin="0,-10,0,0"/>
            </DockPanel>
        </Border>
    </Grid>
</Page>













