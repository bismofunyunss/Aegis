<Page x:Class="Aegis.App.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      Title="SettingsPage"
      Width="750"
      Background="{x:Null}">

    <!-- ========================= -->
    <!-- Page Resources (Theme)    -->
    <!-- ========================= -->
    <Page.Resources>

        <!-- Dark IntegerUpDown -->
        <Style x:Key="DarkIntegerUpDownStyle"
               TargetType="{x:Type xctk:IntegerUpDown}">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

    </Page.Resources>

    <!-- ========================= -->
    <!-- Layout                    -->
    <!-- ========================= -->
    <Grid>

        <Border Width="650"
                CornerRadius="12"
                BorderBrush="#444"
                BorderThickness="2"
                Background="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20">

            <Border.Effect>
                <DropShadowEffect Color="#000"
                                  BlurRadius="12"
                                  ShadowDepth="3"
                                  Opacity="0.4"/>
            </Border.Effect>

            <!-- Scrollable content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <StackPanel>

                    <!-- Title -->
                    <TextBlock Text="Security Settings"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- FIPS -->
                    <CheckBox x:Name="UseFipsModeCheckBox"
                              Content="Use FIPS mode"
                              Foreground="#DDD"
                              FontSize="14"
                              Margin="0,0,0,16"
                              Checked="UseFipsModeCheckBox_Changed"
                              Unchecked="UseFipsModeCheckBox_Changed"/>

                    <!-- PBKDF2 -->
                    <Border CornerRadius="8"
                            BorderBrush="#444"
                            BorderThickness="2"
                            Padding="12"
                            Margin="0,0,0,16">

                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="PBKDF2 Iterations"
                                       Foreground="#CCC"
                                       FontSize="14"
                                       Margin="0,0,0,6"/>

                            <xctk:IntegerUpDown
                                x:Name="Pbkdf2IterationsUpDown"
                                Style="{StaticResource DarkIntegerUpDownStyle}"
                                Width="150"
                                Height="34"
                                Value="100000"
                                Minimum="1"
                                Increment="50000"
                                ValueChanged="Pbkdf2IterationsUpDown_ValueChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Argon2id -->
                    <Border CornerRadius="8"
                            BorderBrush="#444"
                            BorderThickness="2"
                            Padding="14">

                        <StackPanel>

                            <TextBlock Text="Argon2id Parameters"
                                       Foreground="#CCC"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,12"/>

                            <!-- Iterations -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,10">
                                <TextBlock Text="Iterations"
                                           Width="150"
                                           Foreground="#CCC"
                                           VerticalAlignment="Center"/>
                                <xctk:IntegerUpDown
                                    x:Name="Argon2IterationsUpDown"
                                    Style="{StaticResource DarkIntegerUpDownStyle}"
                                    Width="130"
                                    Height="32"
                                    Value="5"
                                    Minimum="1"
                                    ValueChanged="Argon2IterationsUpDown_ValueChanged"/>
                            </StackPanel>

                            <!-- Memory -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,10">
                                <TextBlock Text="Memory (MB)"
                                           Width="150"
                                           Foreground="#CCC"
                                           VerticalAlignment="Center"/>
                                <xctk:IntegerUpDown
                                    x:Name="Argon2MemoryUpDown"
                                    Style="{StaticResource DarkIntegerUpDownStyle}"
                                    Width="130"
                                    Height="32"
                                    Value="256"
                                    Minimum="8"
                                    Increment="32"
                                    ValueChanged="Argon2MemoryUpDown_ValueChanged"/>
                            </StackPanel>

                            <!-- Parallelism -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="Parallelism"
                                           Width="150"
                                           Foreground="#CCC"
                                           VerticalAlignment="Center"/>
                                <xctk:IntegerUpDown
                                    x:Name="Argon2ParallelismUpDown"
                                    Style="{StaticResource DarkIntegerUpDownStyle}"
                                    Width="130"
                                    Height="32"
                                    Value="4"
                                    Minimum="1"
                                    ValueChanged="Argon2ParallelismUpDown_ValueChanged"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                    <!-- Password Options -->
                    <Border CornerRadius="8"
                            BorderBrush="#444"
                            BorderThickness="2"
                            Padding="14"
                            Margin="0,16,0,0">

                        <StackPanel>

                            <TextBlock Text="Password Options"
                                       Foreground="#CCC"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Change your account password. This will rewrap the master key using the new password."
                                       Foreground="#999"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,14"/>

                            <Button Content="Change Password"
                                    Width="180"
                                    Height="36"
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Background="#3A3A3A"
                                    Foreground="White"
                                    BorderBrush="#666"
                                    BorderThickness="1"
                                    Click="ChangePasswordButton_Click">
                                <Button.Effect>
                                    <DropShadowEffect Color="#000"
                                                      BlurRadius="8"
                                                      ShadowDepth="2"
                                                      Opacity="0.35"/>
                                </Button.Effect>
                            </Button>

                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>




