<Window x:Class="Aegis.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Aegis.App.Controls"
        Title="Aegis"
        Width="900"
        Height="600"
        WindowStyle="None"
        ResizeMode="NoResize" 
        Background="#FF1E1E1E"
        AllowsTransparency="False">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="MenuBackground" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="MenuHoverBackground" Color="#FF3E3E42"/>
        <SolidColorBrush x:Key="MenuSelectedBackground" Color="#FF505050"/>
        <SolidColorBrush x:Key="MenuForeground" Color="White"/>
        <SolidColorBrush x:Key="ContentBackground" Color="#FF1E1E1E"/>
        <!-- Hamburger toggle style -->
        <Style TargetType="ToggleButton" x:Key="HamburgerToggleStyle">
            <Setter Property="Background" Value="{StaticResource MenuBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Menu item style -->
        <Style TargetType="ListBoxItem" x:Key="MenuItemStyle">
            <Setter Property="Foreground" Value="{StaticResource MenuForeground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuSelectedBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Custom top bar -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Background="Black" MouseDown="TopBar_MouseDown">
            <DockPanel>
                <TextBlock Text="Aegis" Foreground="White" VerticalAlignment="Center" Margin="10,0" FontSize="16"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Width="40" Height="40" Background="Transparent" Click="Minimize_Click">
                        <Image Source="/Images/close.png" Stretch="Uniform"/>
                    </Button>

                    <Button Width="40" Height="40" Background="Transparent" Click="Maximize_Click">
                        <Image Source="/Images/tabs.png" Stretch="Uniform"/>
                    </Button>

                    <Button Width="40" Height="40" Background="Transparent" Click="Close_Click">
                        <Image Source="/Images/close-button.png" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="MenuColumn" Width="60"/>
                <!-- Collapsed by default -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Hamburger menu -->
            <StackPanel Grid.Column="0" Background="{StaticResource MenuBackground}">
                <ToggleButton x:Name="MenuToggle" Content="☰" Style="{StaticResource HamburgerToggleStyle}"
                              Checked="MenuToggle_Checked" Unchecked="MenuToggle_Unchecked"
                              ToolTip="Expand Menu" IsChecked="True"/>

                <ListBox x:Name="MenuList" BorderThickness="0" Background="Transparent"
                         SelectionChanged="MenuList_SelectionChanged" ItemContainerStyle="{StaticResource MenuItemStyle}">

                    <!-- Example using images for icons -->
                    <ListBoxItem Tag="Login" ToolTip="Login">
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Image Source="/Images/login.png" Width="28" Height="28" Margin="15,0"/>
                            <TextBlock Text="Login" VerticalAlignment="Center" Margin="15,0" FontSize="18"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Register" ToolTip="Register">
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Image Source="/Images/add-user.png" Width="28" Height="28" Margin="15,0"/>
                            <TextBlock Text="Register" VerticalAlignment="Center" Margin="15,0" FontSize="18"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Vault" ToolTip="Vault">
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Image Source="/Images/vault.png" Width="28" Height="28" Margin="15,0"/>
                            <TextBlock Text="Vault" VerticalAlignment="Center" Margin="15,0" FontSize="18"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="FileEncryption" ToolTip="File Encryption">
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Image Source="/Images/data-encryption.png" Width="28" Height="28" Margin="15,0"/>
                            <TextBlock Text="File Encryption" VerticalAlignment="Center" Margin="15,0" FontSize="18"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Hash" ToolTip="Hash">
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Image Source="/Images/cryptography.png" Width="28" Height="28" Margin="15,0"/>
                            <TextBlock Text="Hash" VerticalAlignment="Center" Margin="15,0" FontSize="18"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Settings" ToolTip="Settings">
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Image Source="/Images/cogwheel.png" Width="28" Height="28" Margin="15,0"/>
                            <TextBlock Text="Settings" VerticalAlignment="Center" Margin="15,0" FontSize="18"/>
                        </StackPanel>
                    </ListBoxItem>

                </ListBox>
            </StackPanel>

            <!-- Content frame -->
            <Frame x:Name="ContentFrame" Grid.Column="1" Background="{StaticResource ContentBackground}"/>
            <!-- Bottom overlay container -->
            <Grid Grid.Column="1"
                  VerticalAlignment="Bottom"
                  Margin="20,0,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Rainbow label on left -->
                    <ColumnDefinition Width="Auto" />
                    <!-- TPM status on right -->
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </Grid>
</Window>




