<UserControl x:Class="Aegis.App.Controls.TPMKeyStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="28">

    <Border
        Padding="8,4"
        CornerRadius="6"
        Background="#1E1E1E"
        BorderBrush="#2ECC71"
        BorderThickness="1">

        <StackPanel Orientation="Horizontal">

            <TextBlock
                Text="TPM Trust"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#2ECC71"
                VerticalAlignment="Center"/>

            <TextBlock
                Text=" ✓"
                FontSize="14"
                Foreground="#2ECC71"
                VerticalAlignment="Center"/>

            <!-- Tooltip with FULL thumbprint -->
            <StackPanel.ToolTip>
                <ToolTip>
                    <TextBlock
                        Text="{Binding TooltipText}"
                        TextWrapping="Wrap"
                        Width="420"
                        FontFamily="Consolas"
                        FontSize="12"
                        Foreground="Black"/>
                </ToolTip>
            </StackPanel.ToolTip>

        </StackPanel>
    </Border>
</UserControl>





