<Window x:Class="Aegis.App.Registration.RecoveryKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recovery Key"
        Width="520"
        Height="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        ShowInTaskbar="False"
        Closing="Window_Closing">

    <!-- Outer shadow container -->
    <Border CornerRadius="12"
            Background="{StaticResource ContentBackground}"
            Padding="26">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24"
                              ShadowDepth="0"
                              Opacity="0.7"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Recovery Key"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <!-- Description -->
            <StackPanel Grid.Row="1"
                        Margin="0,0,0,18"
                        MaxWidth="460">

                <TextBlock Text="This is your recovery key in case you get locked out."
                           Foreground="White"
                           FontSize="15"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           Margin="0,0,0,6"/>

                <TextBlock Text="Store it somewhere safe. Anyone with this key can decrypt your data."
                           Foreground="#AAAAAA"
                           FontSize="12.5"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Recovery Key TextBox -->
            <TextBox Grid.Row="2"
                     x:Name="RecoveryKeyBox"
                     Style="{StaticResource AegisTextBox}"
                     IsReadOnly="True"
                     FontFamily="Consolas"
                     FontSize="14"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MinHeight="90"
                     Margin="0,0,0,10"/>

            <!-- Acknowledgement Checkbox -->
            <CheckBox Grid.Row="3"
                      x:Name="AcknowledgeCheckBox"
                      Content="I have stored this recovery key safely."
                      Foreground="White"
                      FontSize="13"
                      Margin="0,0,0,20"
                      Checked="AcknowledgeCheckBox_Changed"
                      Unchecked="AcknowledgeCheckBox_Changed"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Copy"
                        Width="120"
                        Style="{StaticResource AegisButton}"
                        Click="Copy_Click"
                        Margin="0,0,8,0"/>

                <Button Content="OK"
                        Width="120"
                        Style="{StaticResource AegisButton}"
                        Click="Ok_Click"
                        x:Name="OkButton"
                        IsEnabled="False"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>


